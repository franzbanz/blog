---
layout: base
---
<ol class="notes-list">
    {% assign sorted_notes = collections.notes | sort: 'date' | reverse %}
    {% for note in sorted_notes %}
    <li>
        <p>
            <span class="notes-date">{{ note.data.date | date: "%B %d, %Y" }}</span>
        <a href="{{ note.url }}">{{ note.data.title }}</a>
        </p>
    </li>
    {% endfor %}
</ol>
